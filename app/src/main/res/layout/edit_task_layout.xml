<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/taskCreate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_activity">

    <LinearLayout
        android:id="@+id/taskCreateLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_rounded_list_item"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/editText_hint_header"
            android:minHeight="50dp"
            android:padding="10dp"
            android:textColor="@color/green"
            android:textColorHint="@color/text_color_hint_header"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edit_text"
            android:gravity="center_vertical"
            android:hint="@string/editText_hint_description"
            android:minHeight="50dp"
            android:padding="10dp"
            android:textColor="@color/gray"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>
